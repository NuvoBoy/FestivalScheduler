                                        <DockPanel VerticalAlignment="Top">
                                            <Button x:Name="ButtonChoir" Content="{StaticResource Change}" Click="ButtonChoir_OnClick"
                                                    Height="20"
                                                    Width="25" Padding="0 0 0 0" />
                                            <Button x:Name="ButtonDeleteChoir" Content="{StaticResource Delete}" Click="ButtonDeleteChoir_OnClick"
                                                    Height="20"
                                                    Width="25" Padding="0 0 0 0" />
                                        </DockPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
