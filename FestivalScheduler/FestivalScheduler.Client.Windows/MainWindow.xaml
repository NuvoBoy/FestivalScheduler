                                        </DockPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!--Fahrer-->
                    <DataGrid x:Name="DataGridDriver" Margin="20" AutoGenerateColumns="False" CanUserAddRows="False"
                              CanUserSortColumns="True"
                              VirtualizingPanel.IsVirtualizingWhenGrouping="True" AlternationCount="2"
                              BorderThickness="1" Grid.Row="1"
                              Grid.Column="0" HorizontalGridLinesBrush="#FFE5E5E5"
                              VerticalGridLinesBrush="#FFF3F3F3" GridLinesVisibility="Horizontal"
                              Background="#00F0F0F0"
                              BorderBrush="#FFE3E3E3">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="Name" Width="0.1*" CanUserReorder="True"
                                                    CanUserSort="True"
                                                    SortMemberPath="Name">
