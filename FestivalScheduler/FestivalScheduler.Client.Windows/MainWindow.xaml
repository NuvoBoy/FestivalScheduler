                    <Button x:Name="ButtonAddChoir" Content="Hinzufügen" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="20" Width="100" Click="ButtonAddChoir_OnClick"/>
                    
                </Grid>
            </TabItem>

            <TabItem Header="Benutzer">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="0.3*"/>
                    </Grid.RowDefinitions>
                    
                    <!--Betreuer-->
                    <DataGrid x:Name="DataGridAdvisors" Margin="20" AutoGenerateColumns="False" CanUserAddRows="False"
                              CanUserSortColumns="True"
                              VirtualizingPanel.IsVirtualizingWhenGrouping="True" AlternationCount="2"
                              BorderThickness="1"
                              Grid.Column="0" HorizontalGridLinesBrush="#FFE5E5E5"
                              VerticalGridLinesBrush="#FFF3F3F3" GridLinesVisibility="Horizontal"
                              Background="#00F0F0F0"
                              BorderBrush="#FFE3E3E3">
                        <DataGrid.Columns>
