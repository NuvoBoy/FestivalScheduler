                                        <Setter Property="FontSize" Value="11" />
                                    </Style>
                                </DataGridTemplateColumn.HeaderStyle>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <ContentPresenter Content="{Binding PhoneNumber}" HorizontalAlignment="Left" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Zugehörigkeit" Width="0.1*" CanUserReorder="True"
                                                    CanUserSort="True" SortMemberPath="Membership">
                                <DataGridTemplateColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                        <Setter Property="FontSize" Value="11" />
                                    </Style>
                                </DataGridTemplateColumn.HeaderStyle>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <ContentPresenter Content="{Binding Membership}"
                                                          HorizontalAlignment="Center" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Aktionen" CanUserSort="True" Width="60">
                                <DataGridTemplateColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                        <Setter Property="FontSize" Value="11" />
                                    </Style>
                                </DataGridTemplateColumn.HeaderStyle>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <DockPanel VerticalAlignment="Top">
                                            <Button x:Name="ButtonChangeDriver" Content="{StaticResource Change}"
                                                    Height="20"
                                                    Width="25" Padding="0 0 0 0" 
                                                    Click="ButtonChangeDriver_OnClick"/>
                                            <Button x:Name="ButtonDeleteDriver" Content="{StaticResource Delete}"
                                                    Height="20"
                                                    Width="25" Padding="0 0 0 0" 
                                                    Click="ButtonDeleteDriver_OnClick"/>
                                        </DockPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    
                    <Button x:Name="ButtonAddEntry" Content="Hinzufügen" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="20" Click="ButtonAddEntry_OnClick"/>
                </Grid>

            </TabItem>
        </TabControl>
    </Grid>
</Window>
